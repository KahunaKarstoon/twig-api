{
  "name": "twig-api",
  "version": "0.0.8",
  "description": "The API that powers Twig",
  "scripts": {
    "lint": "eslint src",
    "security": "nsp check",
    "test": "./node_modules/.bin/mocha --watch --recursive src/**/__tests__/*",
    "test:ci": "./node_modules/.bin/istanbul cover --dir ./reports --root src -x '**/__tests__/*' _mocha -- --recursive --reporter mocha-jenkins-reporter -O junit_report_path=./reports/test-results.xml,junit_report_stack=1 src/**/__tests__/*",
    "validate": "npm ls",
    "version": "git add package.json",
    "postversion": "git push && git push origin HEAD:master && git push --tags"
  },
  "author": "Shahzain Badruddin",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:digitalrigbitbucketteam/twig-api.git"
  },
  "bugs": "https://digitalrig.atlassian.net/projects/NETWRKDIAG",
  "license": "MIT",
  "devDependencies": {
    "@types/boom": "0.0.32",
    "@types/chai": "^3.4.33",
    "@types/hapi": "^13.0.35",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "@types/sinon": "^1.16.30",
    "chai": "^3.5.0",
    "eslint": "^3.3.1",
    "eslint-config-airbnb-base": "^5.0.2",
    "eslint-plugin-import": "^1.13.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "mocha-jenkins-reporter": "^0.2.6",
    "nodemon": "^1.10.0",
    "nsp": "^2.6.1",
    "pre-commit": "^1.1.3",
    "sinon": "^1.17.6",
    "typescript": "^2.0.3"
  },
  "dependencies": {
    "boom": "^4.0.0",
    "dynogels": "^5.1.0",
    "hapi": "^14.2.0",
    "hapi-auth-cookie": "^6.1.1",
    "joi": "^9.0.4",
    "ldapjs": "^1.0.0",
    "ramda": "^0.22.1",
    "toml": "^2.3.0",
    "winston": "^2.2.0",
    "winston-daily-rotate-file": "^1.3.0"
  },
  "pre-commit": [
    "lint",
    "validate",
    "security"
  ]
}
